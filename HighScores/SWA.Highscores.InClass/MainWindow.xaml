<Window x:Class="SWA.Highscores.InClass.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWA.Highscores.InClass"
        mc:Ignorable="d"
        Title="HighScore List" Height="184" Width="522">
    <Window.DataContext>
        <local:MainViewModel></local:MainViewModel>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="1" Margin="5"/>
        <TextBox Grid.Row="0" Margin="57,16,0,16" HorizontalAlignment="Left" Width="120" Text="{Binding PlayerName}"></TextBox>
        <Label Grid.Row="0" Content="Name" HorizontalAlignment="Left" Height="30" Margin="10,0,0,0" VerticalAlignment="Center" Width="42"/>
        <TextBox Grid.Row="0" Margin="236,16,194,16" Text="{Binding Points, Mode=TwoWay}" ></TextBox>
        <Label Grid.Row="0" Content="Points" HorizontalAlignment="Left" Height="30" Margin="189,0,0,0" VerticalAlignment="Center" Width="42"/>
        <Button Grid.Row="0" Content="Add" HorizontalAlignment="Left" Height="25" Margin="358,0,0,0" VerticalAlignment="Center" Width="76"/>
    </Grid>
</Window>
